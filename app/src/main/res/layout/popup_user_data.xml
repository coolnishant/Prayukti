<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrayuktiLight">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="@color/colorPrayuktiDark"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiLight"
        android:textAlignment="center"
        android:text="Your Details" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiMid"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserId"
        android:layout_margin="2dp"
        android:text="ID" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserName"
        android:text="Name" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserRollno"
        android:text="Roll NO" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserPhone"
        android:text="Phone no" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserEmail"
        android:text="Email" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserTSize"
        android:layout_marginBottom="2dp"
        android:text="T-Size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="@color/colorPrayuktiDark"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiLight"
        android:textAlignment="center"
        android:text="Your Events + Tete-A-Tete" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserEvent1"
        android:layout_marginBottom="2dp"
        android:text="Can Add" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserEvent2"
        android:layout_marginBottom="2dp"
        android:text="Can Add" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserEvent3"
        android:layout_marginBottom="2dp"
        android:text="Can Add" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserEvent4"
        android:layout_marginBottom="2dp"
        android:text="Can Add" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrayuktiDark"
        android:textAlignment="center"
        android:id="@+id/tvUserFees"
        android:layout_marginBottom="2dp"
        android:text="No Fee" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiMid"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"/>


</LinearLayout>