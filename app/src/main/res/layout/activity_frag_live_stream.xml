<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llnotify"
    android:background="@drawable/light_blue_background"
    android:orientation="vertical"
    tools:context="mytwistedidea.wordpress.com.prayukti.LiveStream">

    <Button
        android:id="@+id/bRefreshNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:textSize="25sp"
        android:fontFamily="casual"
        android:textColor="@color/colorPrayuktiLight"
        android:background="#80000000"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="45sp"
    android:layout_height="match_parent"
    android:layout_marginBottom="45dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiDark"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNotifyNone"
        android:textColor="@color/colorPrayuktiDark"
        android:textSize="20sp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:text="No Notification Available!"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_eventsnotification"
        android:layout_alignParentStart="true"/>

    </LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        fab:menu_animationDelayPerItem="50"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorPrayuktiMid"
        fab:menu_colorPressed="@color/colorPrayuktiDark"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_fab_label="Confused!"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_coordinators"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_eventorganisers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrayuktiMid"
            android:src="@drawable/chat_ic"
            fab:fab_label="Contact Event Organisers"
            fab:fab_size="normal" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>

