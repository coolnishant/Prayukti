<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/llaboutme"
    android:layout_height="match_parent"
    android:background="@color/colorPrayuktiDark"
    android:orientation="vertical"
    tools:context="mytwistedidea.wordpress.com.prayukti.LiveStream">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prayukti '17"
        android:textSize="40sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold|italic"
        android:background="@color/colorPrayuktiDark"
        android:textColor="@color/colorPrayuktiLight"
        android:layout_marginBottom="3sp"
        android:gravity="center"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/textView2" />



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiDark"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed BY"
        android:textSize="18sp"
        android:textColor="@color/colorPrayuktiLight"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiDark"
        android:layout_marginTop="2dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
        android:background="#D4AEE7"
        android:weightSum="11"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/riv_mypic"
        android:layout_width="82dp"
        android:layout_marginLeft="2sp"
        android:layout_gravity="center"
        android:layout_height="89dp"
        android:layout_weight="4"
        android:src="@drawable/me" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:text="Nishant\nRaj"
        android:layout_weight="3"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginLeft="8dp"
        android:textSize="22sp"
        android:textColor="#7300AB"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <ImageButton
        android:id="@+id/ibCallDev"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:background="#D4AEE7"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@drawable/phone_call_button"/>

    <ImageButton
        android:id="@+id/ibFacebookDev"
        android:layout_width="60dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:background="#D4AEE7"
        android:src="@drawable/fab_facebook"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/tvMailMe"
        android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#D4AEE7"
            android:fontFamily="casual"
            android:gravity="center"
            android:layout_weight="3"
            android:text="Mail Me at:\n(nishant2raj@gmail.com)"
            android:textAlignment="center"
            android:textColor="#7300AB"
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/ibWhatsappDev"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="#D4AEE7"
            android:src="@drawable/logo_whatsapp_icon"/>

    </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrayuktiDark"
        android:layout_marginBottom="4dp"/>


</LinearLayout>
